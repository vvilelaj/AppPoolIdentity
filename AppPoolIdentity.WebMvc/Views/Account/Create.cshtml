@{
    ViewBag.Title = "Create Account";
}

<div class="page-header">
    <h1>Create Account</h1>
</div>

<form role="form">
    <div class="form-group">
        <label class="control-label" for="UserName">User Name</label>
        @Html.TextBox("UserName",null, new
   {
       @class = "form-control",
       placeholder = "Enter User Name"
   })
    </div>
    <div class="form-group">
        <label class="control-label" for="Email">Email</label>
        @Html.TextBox("Email",null, new
   {
       @type = "email",
       @class = "form-control",
       placeholder = "Enter Email"
   })
    </div>
    <div class="form-group">
        <label class="control-label" for="Password">Password</label>
        @Html.TextBox("Password",null, new
   {
       @type = "password",
       @class = "form-control",
       placeholder = "Enter Password"
   })
    </div>
    <div class="form-group">
        <label class="control-label" for="ConfirmPassword">Confirm Password</label>
        @Html.TextBox("ConfirmPassword",null, new
   {
       @type = "password",
       @class = "form-control",
       placeholder = "Confirm Password"
   })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    @Html.ActionLink("Back to Home", "Index",new { controller = "Home"}, new { @class = "btn btn-danger" })
</form>

@section scripts{
    <script type="text/javascript">
        var createAccountUrl = "@Url.Action("Create", "Account")";
        var homeUrl = "@Url.Action("Index", "Home")";
    </script>
    <script src="~/Scripts/Account/CreateAccountModule.js"></script>
    <script src="~/Scripts/Account/Create.js"></script>
}